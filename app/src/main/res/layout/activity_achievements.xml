<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/achievementActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:background="@color/transparent"
    tools:context=".ui.Achievements.AchievementsFragment">


    <TextView
        android:id="@+id/CurrentKrikoinAchievements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="..."
        android:textSize="20sp"
        android:textColor="@color/gainsboro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/AchievementsKrikoin"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/default_krikoin"
        app:layout_constraintBottom_toBottomOf="@+id/CurrentKrikoinAchievements"
        app:layout_constraintStart_toEndOf="@+id/CurrentKrikoinAchievements"
        app:layout_constraintTop_toTopOf="@+id/CurrentKrikoinAchievements" />

    <TextView
        android:id="@+id/KrikoinPerSecondAchievements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="..."
        android:textColor="@color/gainsboro"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/CurrentKrikoinAchievements"
        app:layout_constraintStart_toStartOf="@+id/CurrentKrikoinAchievements"
        app:layout_constraintTop_toBottomOf="@+id/CurrentKrikoinAchievements"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:id="@+id/AchievementsKrikoinPerSecond"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@drawable/default_krikoin"
        app:layout_constraintBottom_toBottomOf="@+id/KrikoinPerSecondAchievements"
        app:layout_constraintStart_toEndOf="@+id/KrikoinPerSecondAchievements"
        app:layout_constraintTop_toTopOf="@+id/KrikoinPerSecondAchievements" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:id="@+id/firstLine"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/AchievementsKrikoin"
        android:layout_marginTop="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:weightSum="6">

        <ImageButton
            android:id="@+id/id1A_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightRed"
            android:scaleType="fitCenter"
            android:src="@drawable/id1a_1"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/id1A_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightRed"
            android:scaleType="fitCenter"
            android:src="@drawable/id1a_2"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/id1A_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightRed"
            android:scaleType="fitCenter"
            android:src="@drawable/id1a_3"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/id1A_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightRed"
            android:scaleType="fitCenter"
            android:src="@drawable/id1a_4"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/id1A_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightRed"
            android:scaleType="fitCenter"
            android:src="@drawable/id1a_5"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/id1A_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightRed"
            android:scaleType="fitCenter"
            android:src="@drawable/id1a_6"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/secondLine"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/firstLine"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:weightSum="6">

        <ImageButton
            android:id="@+id/id1A_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightRed"
            android:scaleType="fitCenter"
            android:src="@drawable/id1a_7"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/id2A_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightRed"
            android:scaleType="fitCenter"
            android:src="@drawable/id2a_1"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/id2A_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightRed"
            android:scaleType="fitCenter"
            android:src="@drawable/id2a_2"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/id2A_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightRed"
            android:scaleType="fitCenter"
            android:src="@drawable/id2a_3"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/id2A_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightRed"
            android:scaleType="fitCenter"
            android:src="@drawable/id2a_4"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/id2A_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightRed"
            android:scaleType="fitCenter"
            android:src="@drawable/id2a_5"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/thirdLine"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/secondLine"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:weightSum="6">

        <ImageButton
            android:id="@+id/id2A_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightRed"
            android:scaleType="fitCenter"
            android:src="@drawable/id2a_6"
            tools:ignore="SpeakableTextPresentCheck" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>