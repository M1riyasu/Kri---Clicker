<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/transparent"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homeActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        tools:context=".ui.Home.HomeFragment">

        <TextView
            android:id="@+id/CurrentKrikoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="..."
            android:textColor="@color/gainsboro"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/HomeKrikoin"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/CurrentKrikoin"
            app:layout_constraintStart_toEndOf="@+id/CurrentKrikoin"
            app:layout_constraintTop_toTopOf="@+id/CurrentKrikoin"
            app:srcCompat="@drawable/default_krikoin" />

        <TextView
            android:id="@+id/KrikoinPerSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="..."
            android:textSize="14dp"
            android:textColor="@color/gainsboro"
            app:layout_constraintEnd_toEndOf="@+id/CurrentKrikoin"
            app:layout_constraintStart_toStartOf="@+id/CurrentKrikoin"
            app:layout_constraintTop_toBottomOf="@+id/CurrentKrikoin" />

        <ImageView
            android:id="@+id/HomeKrikoinPerSecond"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/default_krikoin"
            app:layout_constraintBottom_toBottomOf="@+id/KrikoinPerSecond"
            app:layout_constraintStart_toEndOf="@+id/KrikoinPerSecond"
            app:layout_constraintTop_toTopOf="@+id/KrikoinPerSecond" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/clickButton"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/krikovbutton"
            android:backgroundTintMode="src_over"
            android:rotation="135"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />


        <TextView
            android:id="@+id/space1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:text="."
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/space2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:text="."
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>